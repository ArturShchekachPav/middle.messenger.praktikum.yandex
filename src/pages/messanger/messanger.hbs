<section id="popup-add-media" class="popup">
	<div class="popup__container">
		<form class="file-form" name="add-media">
			<h2 class="file-form__title">Загрузите медиа-файл</h2>
			<label class="file-form__field">
				<input class="file-form__input" name="media" type="file">
				<span class="file-form__file-text">Выбрать файл на компьютере</span>
			</label>
			{{> Button addedClasses="file-form__button" type="submit" text="Отправить"}}
		</form>
	</div>
</section>
<section id="popup-add-file" class="popup">
