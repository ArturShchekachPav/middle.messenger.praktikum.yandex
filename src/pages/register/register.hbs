<main class="auth app__auth">
  <form name="registration" class="auth-form">
    <h1 class="auth-form__title">Регистрация</h1>
    <fieldset class="auth-form__fields">
      <label class="auth-form__field">
        <span class="auth-form__label">Почта</span>
        <input class="auth-form__input" name="email" required type="email">
      </label>
      <label class="auth-form__field">
        <span class="auth-form__label">Логин</span>
        <input class="auth-form__input" name="login" required minlength="2" maxlength="80" type="text">
      </label>
      <label class="auth-form__field">
        <span class="auth-form__label">Имя</span>
        <input class="auth-form__input" name="first_name" required minlength="2" maxlength="80" type="text">
      </label>
      <label class='auth-form__field'>
        <span class="auth-form__label">Фамилия</span>
        <input class="auth-form__input" name="last_name" required minlength="2" maxlength="80" type="text">
      </label>
      <label class='auth-form__field'>
        <span class="auth-form__label">Телефон</span>
        <input class="auth-form__input" name="phone" required type="tel">
      </label>
      <label class='auth-form__field'>
        <span class="auth-form__label">Пароль</span>
        <input class="auth-form__input" name="password" minlength="8" required type="password">
      </label>
      <label class='auth-form__field'>
        <span class="auth-form__label">Пароль (ещё раз)</span>
        <input class="auth-form__input" name="password_repeat" minlength="8" required type="password">
      </label>
    </fieldset>
    <div class="auth-form__actions">
      {{> Button type="submit" text="Зарегистрироваться"}}
      {{> Link href="/sing-in" class="auth-form__link" page="/sing-in" text="Войти"}}
    </div>
  </form>
</main>